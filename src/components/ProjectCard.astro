---
interface Props {
  title: string;
  description: string;
  tech: string[];
  github?: string;
  live?: string;
  featured?: boolean;
}
const { title, description, tech, github, live, featured } = Astro.props;
---

<div class="group bg-neutral-900 rounded-xl p-6 shadow-md hover:shadow-lg transition">
  {featured && <p class="text-green-400 text-sm mb-1">Featured Project</p>}
  <h3 class="text-2xl font-semibold text-white group-hover:text-green-300 transition">
    {title}
  </h3>
  <p class="text-gray-400 mt-2">{description}</p>

  <ul class="flex flex-wrap gap-3 mt-4 text-sm text-gray-500">
    {tech.map(t => <li>{t}</li>)}
  </ul>

  <div class="mt-4 flex gap-4 text-green-400">
    {github && <a href={github} class="hover:underline" target="_blank">GitHub ↗</a>}
    {live && <a href={live} class="hover:underline" target="_blank">Live ↗</a>}
  </div>
</div>
